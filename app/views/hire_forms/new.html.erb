<%= form_with(model: hire_form, local: true) do |form| %>
  <% if hire_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hire_form.errors.count, "error") %> prohibited this hire_form from being saved:</h2>

      <ul>
      <% hire_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<body>
		<h1>People Action Form</h1>
		<h2>Hire Form</h2>
		    <!-- Field names -->
        <table class="fields">
            <tr>
                <td>
                    <div class="field">
                        <label for="name">Full Name:<abbr title="Required">*</abbr></label>
                        <input type="text" id="name" name="user_name" required></input>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="field">
                        <label for="email">Personal E-mail:<abbr title="Required">*</abbr></label>
                        <input type="email" id="email" name="user_email" required></input>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="field">
                        <label for="phone">Phone Number:</label> <!-- requires phone number in format of 123-456-7890 -->
                        <input type="tel" name="phone_number" required pattern="[0-9]{3}[ -][0-9]{3}[ -][0-9]{4}"></input>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="field">
                        <label for="position">Job Title:</label>
                        <textarea id="position" name="position"></textarea>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="field">
                        <label for="mgr_name">Manager Name:</label>
                        <textarea id="mgr_name" name="mgr_name"></textarea>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="field">
                        <label for="department">Department:</label>
                        <textarea id="department" name="department"></textarea>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="field">
                        <label for="hire_date">Hire Date:</label>
                        <input type="date" name="hire_date" required></input>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="field">
                        <label for="salary">Annual Base Salary:</label>
                        <input type="text" name="salary"></input>
                    </div>
                </td>
            </tr>            
                <td>
                     <div class="field">
                        <label for="variable">Variable Salary:</label>
                        <input type="text" name="variable"></input>
                    </div> 
                </td>
            </tr>                    
                <td>
                    <div class="field">
                        <label for="total_salary">Total Annual Salary:</label>
                        <input type="text" name="total_salary"></input>
                    </div>
                </td>
            </tr>                    
        </table>
       <!--button to submit--> 
        <div>
          <button class="button" type="button" onclick="clickAlert()">Submit</button>
        </div>
	</body>
